<mockups xmlns="http://www.webspeclanguage.org/sui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.webspeclanguage.org/sui sui.xsd ">
    <ui title="Login screen" id="loginScreen">
        <tags>
            <tag name="Node" tagSet="Nav">
                <param value="Login" />
            </tag>
            <tag name="Data" tagSet="Data">
                <param value="User" />
            </tag>
        </tags>
        <layout>
            <flowLayout />
        </layout>
        <widgets>
            <label id="usernameLabel" label="Username: ">
                <layoutInfo>
                    <gridBoxLayoutInfo column="1" row="1" />
                </layoutInfo>
                <originalPosition x="10" y="10" width="100" height="25" />
            </label>
            <textBox id="usernameTextbox">
                <layoutInfo>
                    <gridBoxLayoutInfo column="2" row="1" />
                </layoutInfo>
                <originalPosition x="125" y="10" width="100" height="25" />
            </textBox>
            <label id="passwordLabel" label="Password: ">
                <layoutInfo>
                    <gridBoxLayoutInfo column="1" row="2" />
                </layoutInfo>
                <originalPosition x="10" y="50" width="100" height="25" />
            </label>
            <textBox id="passwordTextbox">
                <layoutInfo>
                    <gridBoxLayoutInfo column="2" row="2" />
                </layoutInfo>
                <originalPosition x="125" y="50" width="100" height="25" />
            </textBox>
            <panel id="loginPanel">
                <originalPosition x="10" y="65" width="200" height="50" />
                <layout>
                    <flowLayout />
                </layout>
                <widgets>
                    <button id="loginButton" label="Login">
                        <originalPosition x="20" y="80" width="50" height="25" />
                    </button>
                    <checkBox id="rememberMeCheckbox" label="Remember me on this computer">
                        <originalPosition x="20" y="95" width="100" height="25" />
                    </checkBox>
                </widgets>
            </panel>
            <panel id="loginType">
                <originalPosition x="10" y="110" width="100" height="100" />
                <layout>
                    <flowLayout />
                </layout>
                <widgets>
                    <image id="loginBanner">
                        <originalPosition x="20" y="160" width="80" height="30" />
                    </image>
                    <radioButton id="normalLogin" label="Normal login">
                        <originalPosition x="20" y="120" width="80" height="30" />
                    </radioButton>
                    <radioButton id="facebookLogin" label="Facebook login">
                        <originalPosition x="20" y="160" width="80" height="30" />
                    </radioButton>
                    <comboBox id="loginAs">
                        <originalPosition x="30" y="240" width="200" height="200" />
                    </comboBox>
                </widgets>
            </panel>
            <repetition id="newsIndex">
                <originalPosition x="10" y="200" width="100" height="200" />
                <layout>
                    <flowLayout />
                </layout>
                <widgets>
                    <link id="newsLink" label="Some news">
                        <originalPosition x="20" y="210" width="80" height="30" />
                    </link>
                </widgets>
            </repetition>
        </widgets>
    </ui>
</mockups>
